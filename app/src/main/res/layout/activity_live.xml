<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent" android:layout_height="match_parent"/>

    <com.example.beequeen.OverlayView
        android:id="@+id/overlay"
        android:layout_width="match_parent" android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <Button android:id="@+id/btnCorrect" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Правильно" android:visibility="gone"/>
        <Space android:layout_width="12dp" android:layout_height="12dp"/>
        <Button android:id="@+id/btnIncorrect" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Не правильно" android:visibility="gone"/>
    </LinearLayout>
</FrameLayout>

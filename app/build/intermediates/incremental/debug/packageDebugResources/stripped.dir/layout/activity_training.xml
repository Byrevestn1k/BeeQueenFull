<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <Button android:id="@+id/btnImportModel" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Імпорт .tflite" />
    <Button android:id="@+id/btnExportDataset" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Експорт датасету (.zip)" />
    <TextView android:id="@+id/tvInfo" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="8dp" />
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvImages" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
</LinearLayout>
